    <ul class="alert alert-success">
  <% Object.keys(flash.err).forEach(function(error) { %>
    <li><%- JSON.stringify(flash.err[error]) %></li>
  <% }) %>
  </ul>
  <% } %>


<div class="row">
<div class="form-group  col-sm-5">
        	<label  class="control-label" for="appBuild">App Build (.ipa file)</label>
        	<input type="file" class="form-control" id="appbuild" placeholder="Choose File" name="appbuild" accept=".ipa">
    	</div>
      <input type="hidden" name="appid" value=<%= app.id%> >
 </div>
<div class="row">
    	<div class="form-group  col-sm-5">
        	<label  class="control-label" for="versionNo">Version No.</label>
        	<input type="text" class="form-control" id="versionNo" value="1.1" name="version">
    	</div>
</div>
<div class="row">
    	<div class="form-group  col-sm-5">
        	<label class="control-label" for="appDetail">Version Notes</label>
        	<textarea class="form-control" rows="10" value = "random text" id="appDetail" name="appdetail"></textarea>
    	</div>
</div>
<div class="row">
   		<div class="form-group col-sm-5">
    		<button onclick = "return validateForm()" type="submit" value = "submit" class="btn btn-primary">Add New Build</button>
    	</div>
</div>
</form>
</div>

